{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "analyze": {
      "dependsOn": ["^build:dist", "^types"],
      "outputs": [
        "src/react/index.ts",
        "src/react/components/**",
        "src/svelte/{client,node}/index.ts",
        "src/svelte/{client,node}/components/**",
        "react/index.js",
        "svelte/index.js",
        "elements.json",
        "vscode.html-data.json"
      ]
    },
    "build": {
      "dependsOn": [
        "build:dist",
        "build:definitions",
        "types",
        "types:react",
        "types:svelte",
        "minify:cdn"
      ],
      "outputs": ["build/**"]
    },
    "build:dist": {
      "dependsOn": ["analyze", "^build:dist"],
      "outputs": ["dist/**", "dist-node/**", "dist-cdn/**", "dist-prod/**"]
    },
    "build:definitions": {
      "dependsOn": ["build:types"],
      "inputs": ["src/define/**"],
      "outputs": ["define/**"]
    },
    "build:types": {
      "dependsOn": ["analyze", "^types"],
      "outputs": ["types/**", "tsconfig.tsbuildinfo"]
    },
    "types": {
      "dependsOn": ["build:types"],
      "inputs": ["types/**", "tsconfig.json"],
      "outputs": ["index.d.ts"]
    },
    "types:react": {
      "dependsOn": ["build:types"],
      "inputs": ["types/**", "tsconfig.json"],
      "outputs": ["react/index.d.ts"]
    },
    "types:svelte": {
      "dependsOn": ["build:types"],
      "inputs": ["types/**", "tsconfig.json"],
      "outputs": ["svelte/index.d.ts"]
    },
    "minify:cdn": {
      "dependsOn": ["build:dist"],
      "inputs": ["dist-cdn/**"],
      "outputs": ["dist-cdn/**"]
    },
    "dev": {
      "cache": false
    },
    "test": {
      "inputs": ["src/**", "tests/**", "vite.config.ts"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["lint:eslint", "lint:prettier"]
    },
    "lint:eslint": {
      "inputs": ["src/**"]
    },
    "lint:prettier": {
      "inputs": ["src/**"]
    }
  }
}
