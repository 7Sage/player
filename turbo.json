{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "analyze": {
      "outputs": ["analyze.json", "vscode.html-data.json", "vue.d.ts", "svelte.d.ts", "solid.d.ts"]
    },
    "build": {
      "dependsOn": ["clean"],
      "outputs": ["cdn/**", "dist/**", "player/**", "tailwind.*"]
    },
    "clean": {
      "cache": false
    },
    "types": {
      "dependsOn": ["clean"],
      "outputs": ["dist/types/**", "*.d.ts"]
    },
    "format": {
      "inputs": ["src/**"]
    },
    "test": {
      "inputs": ["src/**"]
    }
  }
}
