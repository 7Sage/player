{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "outDir": "dist",
    "preserveWatchOutput": true,
    "noEmit": false,
    "importHelpers": true,
    "sourceMap": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "src/base/storybook",
    "src/**/*.stories.ts",
    "src/**/storybook.ts",
    "src/media/test-utils"
  ]
}
