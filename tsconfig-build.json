{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES6",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "outDir": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/shared/storybook.ts",
    "node_modules/**",
    "web_modules/**"
  ]
}
