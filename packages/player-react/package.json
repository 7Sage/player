{
  "name": "@vidstack/player-react",
  "version": "1.5.2",
  "description": "Vidstack Player (React): Design a modern media player only using JSX and CSS.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist/",
    "define/",
    "index.d.ts"
  ],
  "sideEffects": [
    "./_components/*.ts",
    "./dist/components/*.js"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "contributors": [
    "Rahim Alwer <rahim.alwer@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vidstack/vidstack.git",
    "directory": "packages/player-react"
  },
  "bugs": {
    "url": "https://github.com/vidstack/vidstack/issues"
  },
  "scripts": {
    "build:dist": "rollup -c",
    "build:components": "node ./.scripts/build-components.js",
    "build:types": "tsc -p tsconfig.json --pretty && api-extractor run -c types.json && rimraf dist/**/*.d.ts",
    "clean": "rimraf dist src/_components",
    "dev": "run-p watch:dist watch:analyze watch:types",
    "lint:eslint": "eslint src --fix",
    "lint:prettier": "prettier src --write --loglevel warn",
    "watch:dist": "pnpm run build:dist -w",
    "watch:types": "node ../../.scripts/run-on-change.js --glob=\"src/**/*.ts\" --scripts=build:types"
  },
  "dependencies": {
    "@vidstack/foundation": "workspace:*"
  },
  "peerDependencies": {
    "@vidstack/player": "workspace:*"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.20.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/react": "^17.0.39",
    "@vidstack/eliza": "workspace:*",
    "@vidstack/player": "workspace:*",
    "@vidstack/rollup": "workspace:*",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "tslib": "^2.3.0",
    "typescript": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "accessible",
    "audio",
    "components",
    "customizable",
    "dailymotion",
    "extensible",
    "file",
    "hls",
    "html5",
    "media",
    "plyr",
    "player",
    "react",
    "spec-compliant",
    "universal",
    "vds",
    "video",
    "vidstack",
    "vime",
    "vimeo",
    "web-component",
    "universal",
    "youtube"
  ]
}
