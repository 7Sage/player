{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "declarationDir": "types",
    "paths": {
      "$define/*": ["src/define/*"],
      "$test-utils": ["src/test-utils/index.ts"],
      "$test-utils/*": ["src/test-utils/*"]
    },
    "types": ["vitest/globals", "@vidstack/foundation/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
